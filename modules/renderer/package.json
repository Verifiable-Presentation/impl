{
	"name": "@verifiable-presentation/renderer",
	"version": "0.0.0",
	"description": "A service that accepts data and a template and renders the presentation in the requested format.",
	"type": "module",
	"scripts": {
		"clean": "tsx ./scripts/clean.ts",
		"develop": "tsx ./scripts/develop.ts",
		"test": "tsx ./scripts/test.ts",
		"compile": "tsx ./scripts/compile.ts",
		"start": "tsx ./scripts/start.ts",
		"lint": "xo source/**/*.ts && prettier --check --ignore-path .gitignore .",
		"format": "xo --fix source/**/*.ts && prettier --write .",
		"prepare": "patch-package && pnpm clean && pnpm compile"
	},
	"engines": {
		"node": "18",
		"pnpm": "7"
	},
	"dependencies": {
		"@milahu/patch-package": "6.4.14",
		"ajv": "8.11.0",
		"ejs": "3.1.8",
		"fastify": "4.0.3",
		"fastify-plugin": "3.0.1",
		"got": "12.1.0",
		"nanoid": "4.0.0",
		"pino": "8.0.0",
		"pino-pretty": "8.0.0",
		"stacktrace-parser": "0.1.10"
	},
	"devDependencies": {
		"@types/ejs": "3.1.1",
		"ava": "4.3.0",
		"c8": "7.11.3",
		"chalk": "5.0.1",
		"dotenv": "16.0.1",
		"prettier": "2.7.1",
		"tsup": "6.1.2",
		"tsx": "3.6.0",
		"typescript": "4.7.4",
		"xo": "0.50.0",
		"zx": "7.0.1"
	},
	"prettier": {
		"semi": false,
		"useTabs": true,
		"singleQuote": true,
		"bracketSpacing": true,
		"trailingComma": "all",
		"proseWrap": "always",
		"endOfLine": "lf"
	},
	"xo": {
		"prettier": true,
		"rules": {
			"capitalized-comments": 0,
			"no-await-in-loop": 0,
			"@typescript-eslint/restrict-template-expressions": 0,
			"@typescript-eslint/no-unsafe-call": 0,
			"@typescript-eslint/no-unsafe-return": 0,
			"@typescript-eslint/no-unsafe-assignment": 0,
			"@typescript-eslint/no-floating-promises": 0
		}
	},
	"tsup": {
		"target": "esnext",
		"format": [
			"esm"
		],
		"outDir": "./build/",
		"minify": true
	},
	"ava": {
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--loader=tsx",
			"--no-warnings"
		]
	}
}
